%h1= t('Create a new show')
= form_for(@show) do |f|
  .form-group
    = f.label :movie_id, 'Movie'
    = f.select :movie_id, @movies, { include_blank: false }, class: 'form-control'
  .form-group
    = f.label :start_time
    = f.text_field :start_time, class: 'form-control', data: { controller: "datepicker" }
  .form-group
    = f.label :end_time
    = f.text_field :end_time, class: 'form-control', data: { controller: "datepicker" }
  .form-group
    = f.submit 'Create', class: 'btn btn-primary'